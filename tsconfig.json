{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": true,
        "declaration": false,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "rootDir": "src",
        "strict": true,
        "sourceMap": false,
        "target": "es6"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
    ]
}
